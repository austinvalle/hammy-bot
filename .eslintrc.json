{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "prefer-arrow-callback": "error",
        "eol-last": ["error", "always"],
        "no-var": "error",
        "prefer-const": "error",
        "no-trailing-spaces": "error",
        "arrow-spacing": "error"
    }
}